# Environment Variables Template for Halcyon Rest Backend
# Copy this file to .env and fill in your actual values

# ===== DATABASE CONFIGURATION =====
DB_NAME=halcyon_rest_db
DB_USER=halcyon_user
DB_PASS=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=3001

# ===== JWT AUTHENTICATION =====
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_change_this
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# ===== EMAIL SERVICE (NodeMailer) =====
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM="Halcyon Rest <noreply@halcyonrest.com>"

# ===== CURRENCY API =====
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest/USD

# ===== FILE UPLOAD =====
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ===== SECURITY =====
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ===== SESSION =====
SESSION_SECRET=your_session_secret_change_this
SESSION_TIMEOUT=86400000

# ===== CORS =====
CORS_ORIGIN=http://localhost:3000

# ===== LOGGING =====
LOG_LEVEL=info
LOG_DIR=./logs

# ===== OPTIONAL: Third-Party Services =====
# SMS_API_KEY=your_twilio_api_key
# SMS_API_SECRET=your_twilio_api_secret
# STRIPE_SECRET_KEY=your_stripe_secret_key
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key
